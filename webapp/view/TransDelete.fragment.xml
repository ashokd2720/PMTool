<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Dialog
		id="idTransDialogDelete"
		title="Confirm"
		type="Message">
		<content>
		<Text text = "Are you sure you want to delete this record?" />
		</content>
		<beginButton>
			<Button
				text="Delete"
				type="Accept"
				press="fSaveDeleteTrans"/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press="onTransDialogDelete"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>