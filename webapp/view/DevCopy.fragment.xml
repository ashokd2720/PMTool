<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Dialog
		id="idDevDialogCopy"
		contentWidth= "600px"
		contentHeight= "300px"
		resizable= "true"
		title="Save Dev"
		draggable="true">
		<content>
			<f:SimpleForm>
		     	<Label text = "Developer Id" required="true" />
				<Input id  = "cDeveloperId" maxLength="12"  liveChange="fvalidation"/>
				<Label text = "Developer Name" />
				<Input id = "cDeveloperName" maxLength="30"/>
				<Label text = "Active" />
				<CheckBox id = "cActive"/>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button
				text="Save"
				type="Accept"
				press="fSaveCopyDev"/>
		</beginButton>
		<endButton>
			<Button
				text="Cancel"
				press="onCloseCopy"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>